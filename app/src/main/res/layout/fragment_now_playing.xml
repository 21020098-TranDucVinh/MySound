<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--    <data>-->
    <!--        <variable-->
    <!--            name="viewModel"-->
    <!--            type="com.maxrave.simpmusic.viewModel.SharedViewModel">-->

    <!--        </variable>-->
    <!--    </data>-->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/now_playing_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/topAppBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:menu="@menu/top_app_bar_now_playing"
                    app:navigationIcon="@drawable/baseline_keyboard_arrow_down_24"
                    app:subtitle="Liked Songs"
                    app:subtitleCentered="true"
                    app:title="Now Playing"
                    app:titleCentered="true"
                    app:titleTextAppearance="@style/TextAppearance.AppCompat" />
            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topAppBarLayout"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="335sp"
                    android:layout_height="335sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40sp">

                    <ImageView
                        android:id="@+id/ivArt"
                        android:layout_width="340sp"
                        android:layout_height="340sp"
                        android:layout_centerInParent="true">

                    </ImageView>

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/loading_art"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:indeterminate="true">

                    </com.google.android.material.progressindicator.CircularProgressIndicator>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30sp"
                    android:layout_marginTop="90sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/meta_data_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSongTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="@font/roboto_bold"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="People Change"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSongArtist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="@font/roboto"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Hoang, RUNN"
                                android:textSize="18sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cbFavorite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="5"
                            android:button="@drawable/selector_favorite_check_box">

                        </com.google.android.material.checkbox.MaterialCheckBox>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15sp"
                            android:layout_marginEnd="15sp">

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/buffered"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:max="100"
                                android:min="0"
                                android:progress="0"
                                app:indicatorColor="@android:color/darker_gray">

                            </com.google.android.material.progressindicator.LinearProgressIndicator>
                        </RelativeLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/progress_song"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:indeterminate="true"
                            android:valueFrom="0.0"
                            android:valueTo="100.0"
                            app:labelBehavior="gone"
                            app:thumbColor="@android:color/white"
                            app:thumbRadius="5sp"
                            app:trackColorActive="@android:color/white"
                            app:trackColorInactive="@android:color/transparent">

                        </com.google.android.material.slider.Slider>

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/time_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvCurrentTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:gravity="start"
                            android:text=""
                            android:textSize="15sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tvFullTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:gravity="end"
                            android:text=""
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/controler_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp">

                        <ImageButton
                            android:id="@+id/btPlayPause"
                            android:layout_width="80dp"
                            android:layout_height="80sp"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/baseline_play_circle_24" />

                        <ImageButton
                            android:id="@+id/btNext"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20sp"
                            android:layout_toEndOf="@+id/btPlayPause"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/baseline_skip_next_24">

                        </ImageButton>

                        <ImageButton
                            android:id="@+id/btRepeat"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20sp"
                            android:layout_toEndOf="@+id/btNext"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/baseline_repeat_24">

                        </ImageButton>

                        <ImageButton
                            android:id="@+id/btPrevious"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20sp"
                            android:layout_toStartOf="@+id/btPlayPause"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/baseline_skip_previous_24">

                        </ImageButton>

                        <ImageButton
                            android:id="@+id/btShuffle"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20sp"
                            android:layout_toStartOf="@+id/btPrevious"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/baseline_shuffle_24">

                        </ImageButton>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btSongInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:background="@null"
                            android:src="@drawable/baseline_info_24">

                        </ImageButton>

                        <ImageButton
                            android:id="@+id/btQueue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@null"
                            android:src="@drawable/baseline_queue_music_24">

                        </ImageButton>

                    </RelativeLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/lyricsLayout"
                        style="@style/Widget.Material3.CardView.Elevated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10sp">

                                <TextView
                                    style="@style/TextAppearance.Material3.ActionBar.Subtitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="Lyrics">

                                </TextView>

                                <Button
                                    android:id="@+id/btFull"
                                    style="@style/Widget.Material3.Button.TextButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0"
                                    android:minWidth="0sp"
                                    android:minHeight="0sp"
                                    android:padding="0sp"
                                    android:text="Show"
                                    android:textColor="?attr/colorOnSecondaryContainer"
                                    android:textSize="13sp">

                                </Button>
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/lyricsTextLayout"
                                android:layout_width="match_parent"
                                android:layout_height="200sp"
                                android:padding="10sp">

                                <TextView
                                    android:id="@+id/tvPrevLyrics"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/tvNowLyrics"
                                    android:gravity="bottom"
                                    android:lineSpacingExtra="5sp"
                                    android:textSize="20sp"
                                    android:textStyle="normal"></TextView>

                                <TextView
                                    android:id="@+id/tvNowLyrics"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="3sp"
                                    android:layout_marginBottom="3sp"
                                    android:maxLines="6"
                                    android:textSize="26sp"
                                    android:textStyle="bold">

                                </TextView>

                                <TextView
                                    android:id="@+id/tvNextLyrics"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvNowLyrics"
                                    android:lineSpacingExtra="5sp"
                                    android:textSize="20sp"
                                    android:textStyle="normal"></TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/lyricsFullLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10sp">

                                <androidx.core.widget.NestedScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="300sp"
                                    android:layout_centerInParent="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tvFullLyrics"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="26sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10sp"
                                            android:gravity="end"
                                            android:text="Lyrics provided by akashrchandran/spotify-lyrics-api"
                                            android:textSize="10sp">

                                        </TextView>
                                    </LinearLayout>
                                </androidx.core.widget.NestedScrollView>

                            </RelativeLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</layout>